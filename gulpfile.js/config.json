{
	"root": {
		"domain": "http://cadman.de",
		"appName": "cadman",
		"appDescription": "-",
		"src": "./src",
		"dest": "./public/assets",
		"assets": "/"
	},

	"tasks": {
		"browserSync": {
			"proxy": "cadman.dev"
		},

		"js": {
			"src": "javascript",
			"dest": "js",
			"extractSharedJs": false,
			"entries": {
				"app": ["./app.js"],
				"loader": ["./loader.js"],
				"analytics": ["./analytics.js"]
			},
			"extensions": ["js"]
		},

		"css": {
			"src": "sass",
			"dest": "css",
			"autoprefixer": {
				"browsers": ["last 3 version"]
			},
			"sass": {
				"indentedSyntax": true
			},
			"extensions": ["sass", "scss", "css"]
		},

		"favicons": {
			"src": "/favicons/favicon.png",
			"dest": "/favicons",
			"background" :"#FFF"
		},

		"production": {
			"cssSrc": "./public/assets/*.css",
			"jsSrc": "./public/assets/*.js",
			"dest": "./public/assets/"
		}

	}
}
